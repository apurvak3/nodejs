<!DOCTYPE html>
<html>
<head>
    <title><%= genre %> Books</title>
    <style>
        .book-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .book-item {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }
        .book-item img {
            max-width: 150px;
            height: auto;
        }
    </style>
</head>
<body>
    <h1><%= genre %> Books</h1>
    <div class="book-list">
        <% filteredBooks.forEach(function(book) { %>
            <div class="book-item">
                <h2><%= book.title %></h2>
                <img src="<%= book.imageUrl %>" alt="<%= book.title %>">
                <p>Genre: <%= book.genre %></p>
            </div>
        <% }) %>
    </div>
</body>
</html>
